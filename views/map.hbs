<h1>Put your EPIC on the map!</h1>
<section class="map-container">

    <div id="googleMap" style="width:100%;height:400px;"></div>

    <script>
        function myMap() {

            var directionsService = new google.maps.DirectionsService();
            var directionsRenderer = new google.maps.DirectionsRenderer();

            var mapProp = {
                center: new google.maps.LatLng(41.390205, 2.154007),
                zoom: 12,
            };
            var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);
            directionsRenderer.setMap(map);

            var request = {
                origin: 'Carrer Pamplona, Barcelona',
                destination: 'Carrer de Castillejos, Barcelona',
                travelMode: 'DRIVING'
            };

            directionsService.route(request, function (result, status) {
                if (status == 'OK') {
                    directionsRenderer.setDirections(result);
                }
            });
        }
    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAx_wYlhBTq4m2KyFXyOTveiXlO89CG5hs
&callback=myMap">
</script>

</section>